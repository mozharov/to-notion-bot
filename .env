## Application Configuration
##
## - Environment variables from system has higher priority than any ".env" files.
## - Priority: system > .env.local > .env
##
## -------------------------

# Node environment
# Type: string
# Values: development, production, test
# Default: production
NODE_ENV=production

# Webhook secret
# Type: string
# Required: true
WEBHOOK_SECRET=

# Bot token
# Type: string
# Required: true
BOT_TOKEN=

# Port
# Type: number
# Default: 8443
PORT=8443

# Logger format
# Type: string
# Values: json, pretty
# Default: json
LOGGER_FORMAT=json

# Logger level
# Type: string
# Values: fatal, error, warn, info, debug, trace
# Default: info
LOGGER_LEVEL=info

# DB host
# Type: string
# Required: true
DB_HOST=db

# DB port
# Type: number
# Required: true
DB_PORT=5432

# DB name
# Type: string
# Required: true
DB_NAME=local

# DB user
# Type: string
# Required: true
DB_USER=root

# DB password
# Type: string
# Required: true
DB_PASSWORD=1234

# DB synchronize (only for development)
# Type: boolean
# Default: false
DB_SYNCHRONIZE=false

# DB migrations run
# Type: boolean
# Default: false
DB_MIGRATIONS_RUN=false

# Fetch bot info
# If false, BOT_FIRST_NAME, BOT_ID and BOT_USERNAME must be provided
# Type: boolean
# Default: false
FETCH_BOT_INFO=false

# Bot first name
# Required if FETCH_BOT_INFO is false
# Type: string
# Default: null
BOT_FIRST_NAME=null

# Bot ID
# Required if FETCH_BOT_INFO is false
# Type: number
# Default: 0
BOT_ID=0

# Bot username
# Required if FETCH_BOT_INFO is false
# Type: string
# Default: null
BOT_USERNAME=null