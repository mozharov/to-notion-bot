{
  "name": "to-notion-bot",
  "version": "1.0.0",
  "description": "Bot for instantly sending content from Telegram to Notion.",
  "scripts": {
    "build": "npx tsc --project tsconfig.build.json && copyfiles -u 1 src/**/*.ftl dist/",
    "start:prod": "node dist/main.js",
    "start:dev": "DEBUG=grammy* nodemon --ext ts,ftl --watch src --ignore 'src/**/*.spec.ts' --exec 'npm run build && node dist/main.js'",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\"",
    "migration:generate": "typeorm-ts-node-commonjs -d src/typeorm/typeorm.migration.options.ts -p true migration:generate src/typeorm/migrations/migration",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/typeorm/typeorm.migration.options.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/typeorm/typeorm.migration.options.ts"
  },
  "engines": {
    "node": ">=20.11 <21.0.0",
    "npm": ">=10.2 <11.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozharov/to-notion-bot.git"
  },
  "author": "Vladislav Mozharov <mozharovlad@gmail.com>",
  "private": true,
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.11.28",
    "@types/pg": "^8.11.5",
    "@types/superagent": "^8.1.6",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@grammyjs/auto-retry": "^1.1.1",
    "@grammyjs/conversations": "^1.2.0",
    "@grammyjs/i18n": "^1.0.2",
    "@grammyjs/storage-psql": "^2.4.2",
    "@notionhq/client": "^2.2.14",
    "bottleneck": "^2.19.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-async-errors": "^3.1.1",
    "grammy": "^1.21.1",
    "joi": "^17.12.2",
    "lodash": "^4.17.21",
    "moy-nalog": "^1.0.6",
    "nanoid": "^3.3.7",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.1",
    "superagent": "^8.1.2",
    "typeorm": "^0.3.20",
    "winston": "^3.12.0"
  }
}
